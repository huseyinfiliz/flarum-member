{
    "name": "huseyinfiliz/flarum-member",
    "description": "Give members more class. Adds a logged-in class to the forum's body tag. Also, includes two BBCodes. [members] & [guests]",
    "type": "flarum-extension",
    "keywords": [
        "users",
        "members"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Huseyin Filiz",
            "email": "info@huseyinfiliz.com.tr",
            "homepage": "https://huseyinfiliz.com.tr"
        }
    ],
    "support": {
        "issues": "https://github.com/huseyinfiliz/flarum-member/issues",
        "source": "https://github.com/huseyinfiliz/flarum-member",
        "forum": "https://discuss.flarum.org/d/36153-add-member-logged-inout-class-simple-guide-no-extension"
    },
    "homepage": "https://huseyinfiliz.com.tr",
    "funding": [
        {
            "type": "website",
            "url": "https://huseyinfiliz.com.tr"
        }
    ],
    "require": {
        "flarum/core": "^1.2.0"
    },
    "autoload": {
        "psr-4": {
            "huseyinfiliz\\Members\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Members Class",
            "category": "feature",
            "icon": {
                "name": "fas fa-users",
                "backgroundColor": "#ddd",
                "color": "#000"
            }
        }
    }
}
